<RenewalWidget>:
        orientation: 'vertical'
        spacing : 20
        padding : 20
        canvas:
                Color: 
                        rgba: (0.2, 0.21, 0.2, 1)
                Rectangle: 
                        pos: self.pos
                        size: self.size
        BoxLayout:
                orientation: 'vertical'
                spacing: -50
                Label:
                        text: '[u]Resubscription[/u]'
                        markup: True
                        font_size: '29sp'
                        color: (.2, 1, .5, 1)
                Label:
                        text: 'ID:'
                        font_size: "28sp"
                TextInput:
                        hint_text: 'Enter your ID'
                        font_size: "29sp"
                        size_hint: (0.7, 0.25)
                        pos_hint: {"center_x": 0.5}
        
        BoxLayout:
                orientation: 'vertical'
                spacing: -40
                Label:
                        text: 'Change Subscription Method ? :'
                        font_size: "28sp"
                BoxLayout:
                        padding: 30
                        orientation: 'horizontal'
                        spacing: 30
                        size_hint: (0.7, 1)
                        pos_hint: {"center_x": 0.5}
                ##############################
                Label:
                        text: 'Monthly'
                CheckBox:
                        group: 'subscription_group'
                        id: monthly
                Label:
                        text: '20_sessions'
                CheckBox:
                        group: 'subscription_group'
                        id: s_20
                Label:
                        text: '30_sessions'
                CheckBox:
                        group: 'subscription_group'
                        id: s_30
                
        Button:
                padding: 20
                text: 'Reactivate Membership'
                font_size: "20pt"
                color: (.2, 1, .5, 1)
                pos_hint: {'center_x': 0.5}
                size_hint: (0.7, None)
                on_press: root.print_selected_subscription()
