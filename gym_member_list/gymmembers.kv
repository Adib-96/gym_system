<GymMembers>:
    orientation: "vertical"
    padding: 15
    spacing: 20
    canvas:
        Color: 
            rgba: (0.2, 0.21, 0.2, 1)
        Rectangle: 
            pos: self.pos
            size: self.size
    ########### Filter by Username ###########
    BoxLayout:
        size_hint: 1, 0.05
        orientation: "horizontal"
        Label:
            text: "Filter By Username:"
        TextInput:
            size_hint: 1,0.76
            id: username_filter
            hint_text: "Enter username"
            multiline: False
            font_size: 20

    ######## Filter by Activity #########
    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 0.05
        Label:
            text: "Filter By Activity:"
        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            Label:
                text: "BODYBUILDING"
            CheckBox:
                group: 'activity'
                id: bodybuilding
            Label:
                text: "CROSSFIT"
            CheckBox:
                group: 'activity'
                id: crossfit
            Label:
                text: "MARTIAL_ARTS"
            CheckBox:
                group: 'activity'
                id: martial_arts

    ######## Filter by Subscription Method ########
    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 0.05
        Label:
            text: "Filter By Subscription Method:"
        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            Label:
                text: "Monthly"
            CheckBox:
                group: 'subcription_methode'
                id: monthly
            Label:
                text: "20_session"
            CheckBox:
                group: 'subcription_methode'
                id: session_20
            Label:
                text: "30_session"
            CheckBox:
                group: 'subcription_methode'
                id: session_30
    Button:
        text: "Apply Filters"
        size_hint: 0.4, 0.05
        pos_hint: {"x": 0.55}
        on_press: root.collect_filters()

    ############### Display data ###############
    GridLayout:
        size_hint: 1,0.1
        cols: 5
        Label:
            text: 'Id'
            bold: True
            size_hint: 1,None
            height: 50
            canvas:
                Color: 
                    rgba: [0.918, 0.878, 0.835, 0.2]
                Rectangle: 
                    pos: self.pos
                    size: self.size
        Label:
            text: 'Username'
            bold: True
            color: 0,0.5,1,1
            size_hint: 1,None
            height: 50
            canvas:
                Color: 
                    rgba: 0.133, 0.200, 0.231, 0.2
                Rectangle: 
                    pos: self.pos
                    size: self.size
        Label:
            text: 'Activity'
            bold: True
            size_hint: 1,None
            height: 50
            canvas:
                Color: 
                    rgba: [0.918, 0.878, 0.835, 0.2]
                Rectangle: 
                    pos: self.pos
                    size: self.size
        Label:
            text: 'Subscription Method'
            bold: True
            size_hint: 1,None
            height: 50
            color: 0,0.5,1,1
            canvas:
                Color: 
                    rgba: 0.133, 0.200, 0.231, 0.2
                Rectangle: 
                    pos: self.pos
                    size: self.size
        Label:
            text: 'Active/Inactive'
            bold: True
            size_hint: 1,None
            height: 50
            canvas:
                Color: 
                    rgba: [0.918, 0.878, 0.835, 0.2]
                Rectangle: 
                    pos: self.pos
                    size: self.size
    ScrollView:
        size_hint: 1, 0.4
        GridLayout:
            id: user_display
            cols: 5
            size_hint_y: None
            height: self.minimum_height
            row_default_height: '80dp'
            row_force_default: True
