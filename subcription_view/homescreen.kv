<MainLayout>:
    orientation:'vertical'
    spacing : 30
    padding : 10
    canvas:
        Color: 
            rgba: (0.898, 0.898, 0.898, 1)
        Rectangle: 
            pos: self.pos
            size: self.size

    Label:
        text:"[b]SUBSCRIPTION FORM[/b]"
        markup:"True"
        font_size: 26
        color:"black"
        size_hint:(None,None)
        size:90,20
        pos_hint:{"center_x":0.5}

    Label:
        text: ''
        id: error_text
        font_size: 17
        color: "red"
        size_hint:(None,None)
        size:90,20
        pos_hint:{"center_x":0.5}

    Label:
        text:"[b]Username*[/b]"
        markup:"True"
        font_size: 20
        color:"black"
        size_hint:None,None
        size:90,40
    TextInput:
        id: name_input
        hint_text:"Let us know your name"
        multiline:False
        font_size:"14pt"
        padding:5
        size_hint: (1,1)


    Label:
        markup:'True'
        text:"[b]Age[/b]"
        font_size:20
        color:"black"
        size_hint:None,None
        size:40,40
    TextInput:
        id: age_input
        hint_text:"Let us know your age"
        multiline:False
        font_size:"14pt"
        padding:5
        size_hint: (1,1)



    Label:
        markup:True
        text:'[b]Email[/b]'
        font_size:20
        color:"black"
        size_hint:None,None
        size:50,40
    TextInput:
        id: email_input
        hint_text:"Let us know your email"
        multiline:False
        font_size:"14pt"
        padding:5
        size_hint: (1,1)



##################GYM ACTIVITY###############
    Label:
        markup:True
        text:"[b]Activity*[/b]"
        font_size:20
        color:'black'
    BoxLayout:
        orientation:'horizontal'
        spacing:5
        

        ToggleButton:
            id: bodybuilding
            text:"BODYBUILDING"
            padding:25
            group:"activity"
        ToggleButton:
            id:crossfit
            text:"CROSSFIT"
            padding:25
            group:"activity"
        ToggleButton:
            id:Mixed_Arts
            text:"MIXED_ARTS"
            padding:25
            group:"activity"

##################SUBSCRIPTION METHODE###############
    Label:
        markup:True
        text:"[b]Subscription Methode*[/b]"
        color:(0,0,0,1)
        font_size:20

    BoxLayout:
        orientation:'horizontal'
        spacing:20

        ToggleButton:
            text:"MONTHLY"
            group:"subscription_methode"
            id:monthly
        ToggleButton:
            text:"20_SESSION"
            group:"subscription_methode"
            id:s_20
        ToggleButton:
            text:"30_SESSION"
            group:"subscription_methode"
            id:s_30
####################SUBMIT BUTTON######################
    Button:
        text:"Sign In"
        font_size:"30sp"
        color:(1.0, 0.7647, 0.0, 1)
        pos_hint: {'center_x': 0.5}
        size_hint: None, None
        size: 330, 50
        on_press:root.submit_form()
