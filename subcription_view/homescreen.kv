<MainLayout>:
    orientation:'vertical'
    spacing : 10
    padding : 30

    Label:
        text:"[b]Username*[/b]"
        markup:"True"
        font_size: 20
        color:"black"
        size_hint:None,None
        size:90,40
    TextInput:
        id: name_input
        hint_text:"Let us know your name"
        multiline:False
        font_size:"15pt"

    Label:
        markup:'True'
        text:"[b]Age[/b]"
        font_size:20
        color:"black"
        size_hint:None,None
        size:40,40
    TextInput:
        id: age_input
        hint_text:"Let us know your age"
        multiline:False
        font_size:"15pt"
    Label:
        markup:True
        text:'[b]Email[/b]'
        font_size:20
        color:"black"
        size_hint:None,None
        size:50,40
    TextInput:
        id: email_input
        hint_text:"Let us know your email"
        multiline:False
        font_size:"15pt"

##################GYM ACTIVITY###############
    Label:
        markup:True
        text:"[b]Activity*[/b]"
        font_size:20
        color:'black'
    BoxLayout:
        orientation:'horizontal'
        spacing:10
        padding:5

        ToggleButton:
            id: bodybuilding
            text:"BODYBUILDING"
            group:"activity"
        ToggleButton:
            id:crossfit
            text:"CROSSFIT"
            group:"activity"
        ToggleButton:
            id:Mixed_Arts
            text:"MIXED_ARTS"
            group:"activity"

##################SUBSCRIPTION METHODE###############
    Label:
        markup:True
        text:"[b]Subscription Methode*[/b]"
        color:(0,0,0,1)
        font_size:20

    BoxLayout:
        orientation:'horizontal'
        spacing:20
        padding:5

        ToggleButton:
            text:"MONTHLY"
            group:"subscription_methode"
            id:monthly
        ToggleButton:
            text:"20_SESSION"
            group:"subscription_methode"
            id:s_20
        ToggleButton:
            text:"30_SESSION"
            group:"subscription_methode"
            id:s_30
####################SUBMIT BUTTON######################
    Button:
        text:"Sign In"
        font_size:"20pt"
        color:(.2,1,.5,1)
        pos_hint: {'center_x': 0.5}
        size_hint: .45, None
        size: 200, 80
        on_press:root.submit_form()
